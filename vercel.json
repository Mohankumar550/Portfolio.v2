{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "vercel-node@20.0.0"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/index.html"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build:vercel"
}
